{
  "title": "Import from file",
  "blocks": [
    {
      "type": "init"
    },
    {
      "type": "variable-get",
      "name": "bloomenAuth"
    },
    {
      "type": "context-save",
      "contextKey": "bloomenAuth"
    },
    {
      "type": "message",
      "title": "Import items",
      "message": "Select file to import items into Bloomen API."
    },
    {
      "type": "file-input",
      "label": "Load file",
      "accept": [
        "json"
      ]
    },
    {
      "type": "parse-data"
    },
    {
      "type": "grid",
      "gridOptions": {
        "rowSelection": "multiple"
      },
      "columnDefs": [
        {
          "checkboxSelection": true,
          "width": 70,
          "suppressSizeToFit": true
        },
        {
          "headerName": "Title",
          "field": "originalTitle"
        },
        {
          "headerName": "ISWC",
          "field": "ISWC"
        }
      ]
    },
    {
      "type": "actions",
      "buttons": [
        {
          "label": "Import",
          "color": "primary",
          "blocks": [
            {
              "type": "batch",
              "blocks": [
                {
                  "type": "http",
                  "skipInit": false,
                  "method": "post",
                  "endpoint": {
                    "protocol": "https:",
                    "host": "bloomen.herokuapp.com",
                    "pathname": "/sound/music"
                  },
                  "authentication": {
                    "type": "bearer",
                    "valueGetters": {
                      "jwt": "context.bloomenAuth"
                    }
                  }
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "id": "importFromFile",
  "adapterName": "bloomen"
}
