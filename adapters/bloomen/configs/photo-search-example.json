{
  "title": "Photo search (Bloomen API)",
  "blocks": [
    {
      "type": "form",
      "hasSubmit": false,
      "jsonSchema": {
        "properties": {
          "term": {
            "title": "Search",
            "type": "string"
          }
        }
      },
      "uiSchema": {}
    },
    {
      "type": "context",
      "contextPath": "bloomenAuth",
      "contextBlocks": [
        {
          "type": "variable-get",
          "name": "bloomenAuth"
        }
      ],
      "blocks": [
        {
          "type": "http",
          "method": "post",
          "notify": false,
          "endpoint": {
            "protocol": "https:",
            "host": "bloomen.herokuapp.com",
            "pathname": "/photos/search"
          },
          "authentication": {
            "type": "bearer",
            "valueGetters": {
              "jwt": "context.bloomenAuth"
            }
          }
        }
      ]
    },
    {
      "type": "batch",
      "flex": true,
      "blocks": [
        {
          "type": "card",
          "blocks": [
            {
              "type": "template",
              "template": "<p>{{description}}</p><img width=\"200\" src=\"{{url}}\">"
            },
            {
              "type": "debug",
              "showContext": false,
              "open": 0
            }
          ]
        }
      ]
    }
  ]
}
