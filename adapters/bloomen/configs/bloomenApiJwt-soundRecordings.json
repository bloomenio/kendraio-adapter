{
  "title": "List recordings (Bloomen API)",
  "blocks": [
    {
      "type": "init"
    },
    {
      "type": "context",
      "contextPath": "jwt",
      "contextBlocks": [
        {
          "type": "variable-get",
          "name": "bloomen-jwt"
        }
      ],
      "blocks": [
        {
          "type": "http",
          "method": "get",
          "endpoint": {
            "protocol": "https:",
            "host": "bloomen.herokuapp.com",
            "pathname": "/sound/recordings"
          },
          "authentication": {
            "type": "bearer",
            "valueGetters": {
              "jwt": "context.jwt"
            }
          }
        }
      ]
    },
    {
      "type": "grid",
      "columnDefs": [
        {
          "headerName": "ISRC",
          "field": "ISRC"
        },
        {
          "headerName": "Title",
          "valueGetter": "title"
        },
        {
          "headerName": "Artist",
          "valueGetter": "mainArtist"
        },
        {
          "headerName": "Year",
          "valueGetter": "yearOfRecording"
        },
        {
          "headerName": "Featured artists",
          "valueGetter": "featuredArtists"
        }
      ]
    }
  ]
}
