{
  "title": "Login",
  "blocks": [
    {
      "type": "form",
      "label": "Login",
      "jsonSchema": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string",
            "title": "Username"
          },
          "password": {
            "type": "string",
            "title": "Password"
          }
        }
      },
      "uiSchema": {
        "password": {
          "ui:widget": "password"
        }
      }
    },
    {
      "type": "http",
      "method": "post",
      "endpoint": "https://bloomen.herokuapp.com/auth/login"
    },
    {
      "type": "mapping",
      "mapping": "data.token"
    },
    {
      "type": "variable-set",
      "name": "bloomenAuth"
    }
  ],
  "id": "login",
  "adapterName": "bloomen"
}
